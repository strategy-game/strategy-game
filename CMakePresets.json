{
    "version": 2,
    "configurePresets": [
        {
            "name": "ninja-default",
            "displayName": "Ninja default build",
            "generator": "Ninja",
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "environment": {
                "VCPKG_FEATURE_FLAGS": "manifests,versions,binarycaching"
            }
        }
    ]
}